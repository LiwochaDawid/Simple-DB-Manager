CREATE DATABASE Firma;		-- tworze baze firmy
-----------------------------------------------------------------------------------------------------------------------------------------------------
CREATE TABLE Pracownicy		-- tworze tabele pracownikow
(
	ID_Pracownika PRIMARYKEY, 
	Imie STRING, 
	Nazwisko STRING, 
	Wiek INT,
	Ulica STRING,
	Miasto STRING,
	Zarobki DOUBLE,
	DeleteFlag BOOL
);
-----------------------------------------------------------------------------------------------------------------------------------------------------
CREATE TABLE Stanowiska		-- tworze tabele stanowisk
(
	Nazwa STRING,
	Czas_Pracy DOUBLE
);

